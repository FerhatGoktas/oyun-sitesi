@{
    ViewBag.Title = "Ana Sayfa";
}



<main>
    <section>
        <h2 style="padding:60px;">Efsane Oyun</h2>
        <div class="games-list">
            @foreach (var game in Model)
            {
                <div class="game-item">
                    <div class="game-item-content">
                        <a href="@Url.Action("", "Game", new { i = @game.game_Id })">
                            <img src="~/Assets/Games/@game.game_Id/@game.image" class="game-image" alt="@game.game_Name">
                            <h5 class="game-name" sytyle:"text-decoration:none;">@game.game_Name</h5>
                        </a>
                        <p class="game-description">@game.description</p>
                    </div>
                </div>
            }
        </div>
    </section>
</main>
